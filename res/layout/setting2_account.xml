<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D8DDE0" >


<LinearLayout
    android:id="@+id/alinearLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
            
	<TextView
		android:id="@+id/atextView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="5dp"
		android:text="기본정보"
		android:textColor="#000000"
		android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:id="@+id/asectionLayout1"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_back" >

        <TableRow
            android:id="@+id/atableRow1"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/alinearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="50dp" >

                <ImageView
                android:id="@+id/aimageView3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/id" />
                
                <TextView
                    android:id="@+id/aCategoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="회원   I D "
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <View
            		android:id="@+id/aCatview2"
            		android:layout_width="1dp"
            		android:layout_height="50dp"
            		android:layout_marginLeft="5dp"
            		android:layout_marginRight="5dp"
            		android:background="#AAAAAA" />

                <TextView
                    android:id="@+id/acategoryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

        </TableRow>

        <View
            android:id="@+id/aview1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#AAAAAA" />

        <TableRow
            android:id="@+id/atableRow2"
            android:layout_width="wrap_content"
            android:layout_height="50dp" >
            
            <LinearLayout
                android:id="@+id/alinearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="45dp" >

                <ImageView
                android:id="@+id/aimageView3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/toilet" />
                
                <TextView
                    android:id="@+id/aTitleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="회원 성별"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <View
            		android:id="@+id/aSexview2"
            		android:layout_width="1dp"
            		android:layout_height="50dp"
            		android:layout_marginLeft="6dp"
            		android:layout_marginRight="5dp"
            		android:background="#AAAAAA" />


                <TextView
                    android:id="@+id/atitleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
            
        </TableRow>

        <View
            android:id="@+id/aview2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#AAAAAA" />
            
        <TableRow
            android:id="@+id/atableRow3"
            android:layout_width="wrap_content"
            android:layout_height="50dp" >
            
            <LinearLayout
                android:id="@+id/alinearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="50dp" >

                <ImageView
                android:id="@+id/aimageView3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/age" />
                
                <TextView
                    android:id="@+id/aHostTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="회원 나이"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <View
            		android:id="@+id/aAgeview2"
            		android:layout_width="1dp"
            		android:layout_height="51dp"
            		android:layout_marginLeft="6dp"
            		android:layout_marginRight="5dp"
            		android:background="#AAAAAA" />


                <TextView
                    android:id="@+id/ahostLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
            
        </TableRow>
        
        

    </TableLayout>

           
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="기본정보는 수정이 불가능합니다."
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="13dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
		        android:id="@+id/atextView2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="15dp"
		        android:layout_marginTop="20dp"
		        android:text="자기 소개"
		        android:textColor="#000000"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
		        android:layout_width="10dp"
		        android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/introEditButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="#00000000"
                android:layout_gravity="bottom"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_edit_48" />
            
        </TableRow>

    </TableLayout>

    

    <EditText
        android:id="@+id/acontentText"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:gravity="top"
		android:background="@drawable/rounded_back"
        android:text=""
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

       
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="자기소개는 수정할 수 있습니다."
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="13dp" />

    <Button
        android:id="@+id/aenterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계 정 삭 제" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="계정을 삭제하면 회원님의 모든 데이터가 삭제됩니다"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="15dp" />
            
</LinearLayout>

</ScrollView>
