<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D8DDE0" >
    
<LinearLayout 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
        


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="계정정보 입력"
        android:textColor="#000000"
        android:textSize="20dp" />
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="기본 정보"
        android:textColor="#000000"
        android:textSize="17dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_back"
        android:layout_margin="10dp"
        android:layout_gravity="center" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center" >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:text="아 이 디" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#777777" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" >
                
                <EditText
	                android:id="@+id/registerIdText"
	                android:layout_width="150dp"
	                android:layout_height="match_parent"
	                android:gravity="center"
	                android:textColor="#000000"
	                android:background="#00000000"
	                android:textSize="15dp"
	                android:maxLength="15"
	                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
	                android:hint="입력후 중복확인 >>" />
	
	            <Button
	                android:id="@+id/registerIdCheckButton"
	                android:layout_width="50dp"
	                android:layout_height="match_parent"
	                android:layout_marginTop="8dp"
	                android:layout_marginBottom="5dp"
	                android:layout_marginRight="5dp"
	                android:textSize="13dp"
	                android:text="확인" />
                
            </LinearLayout>
            
            
        </TableRow>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/iphone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:text="휴 대 폰" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#777777" />

            <TextView
                android:id="@+id/registerPhoneNumTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp" />
            
        </TableRow>

        <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#777777" />
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/toilet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="성 별" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#777777" />

            <RadioGroup
                android:id="@+id/registerRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

				<RadioButton
	                android:id="@+id/registerRadioM"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="남" 
	                android:textColor="#000000"
	                android:layout_marginRight="10dp"/>
	
	      		<RadioButton
	                android:id="@+id/registerRadioF"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="여"
	                android:textColor="#000000" />
           		    
            </RadioGroup>

            

        </TableRow>
		
		<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777" />        
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/age" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="나 이" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#777777" />

            <EditText
                android:id="@+id/registerAgeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#00000000"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:inputType="number"
                android:ellipsize="start"
                android:maxLength="2"
				android:hint="나이를 입력하세요" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/warning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:text="아이디에는 영문과 숫자만 쓸 수 있으며 기본 정보는 가입 후 변경이 불가능합니다."
            android:textSize="13dp" />

    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="자기 소개"
        android:textColor="#000000"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/registerIntroText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:layout_margin="10dp"
        android:gravity="top"
        android:maxLines="5"
        android:textColor="#000000"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@drawable/rounded_back" >
    </EditText>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/registerTOACheckbox"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:checked="false"
                android:text=" 가입 약관에 동의합니다."
                android:textColor="#000000" />
            
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="약관을 보시려면 누르세요 >>  "
                    android:textSize="13dp"
                    android:textColor="#000000" />
                
                <ImageButton
                    android:id="@+id/registerTOAButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#00000000"
                    android:src="@drawable/info" />
                
            </LinearLayout>

            
        </TableRow>

    </TableLayout>
    
    <Button
        android:id="@+id/registerSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
		android:layout_margin="10dp"
        android:text="계정 생성하기" />

</LinearLayout>
</ScrollView>